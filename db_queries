CREATE TABLE `servers` (`server_id` INTEGER NOT NULL, `address` TEXT NOT NULL, `port` INTEGER NOT NULL, `name` TEXT NOT NULL, `description` TEXT, `timestamp` INTEGER NOT NULL, PRIMARY KEY(`server_id`));
CREATE TABLE `coordinates` (`coordinate_id` INTEGER NOT NULL, `raw` TEXT NOT NULL, `timestamp` INTEGER NOT NULL, `server_id` INTEGER NOT NULL, `owner_id` INTEGER NOT NULL, PRIMARY KEY(`coordinate_id`), FOREIGN KEY(`server_id`) REFERENCES `servers`(`server_id`) ON DELETE CASCADE ON UPDATE CASCADE, FOREIGN KEY(`owner_id`) REFERENCES `owners`(`owner_id`) ON DELETE CASCADE ON UPDATE CASCADE);
CREATE TABLE `owners` (`owner_id` INTEGER NOT NULL, `name` TEXT NOT NULL, PRIMARY KEY(`owner_id`));
CREATE TABLE `categories` (`category_id` INTEGER NOT NULL, `name` TEXT NOT NULL, PRIMARY KEY(`category_id`));
CREATE TABLE `categories_coordinates` (`category_id` INTEGER NOT NULL, `coordinate_id` INTEGER NOT NULL, PRIMARY KEY(`category_id`,`coordinate_id`), FOREIGN KEY(`category_id`) REFERENCES `categories`(`category_id`) ON DELETE CASCADE ON UPDATE CASCADE, FOREIGN KEY(`coordinate_id`) REFERENCES `coordinates`(`coordinate_id`) ON DELETE CASCADE ON UPDATE CASCADE);
